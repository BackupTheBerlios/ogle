if test "x$GCC" = xyes; then
  CFLAGS="$CFLAGS -Wall"
else
    dnl non-GCC flags - we probably need exact configuration triplets here.
    case "$host_alias" in
    sparc-sun-solaris*)
        CFLAGS="$CFLAGS -xCC -fast"
	DVDREAD_CFLAGS="$DVDREAD_CFLAGS -xmemalign"
    esac
fi

