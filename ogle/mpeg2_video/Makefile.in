top_builddir = ..
top_srcdir = @top_srcdir@
CC=@CC@
ifneq (@MLIB_LIBS@,)
MLIB_OBJS=yuv2rgb_mlib.o
endif

ifneq (@USE_MMX@,)
MMX_OBJS=yuv2rgb_mmx.o mmx_idct.o mmx_mlib.o
endif

ifeq (@MLIB_OBJS@@USE_MMX@,)
OTHER_OBJS=c_mlib.o
endif

DFLAGS=@CFLAGS@ @DEFS@ @X_CFLAGS@ @MLIB_CFLAGS@ @GLIB_CFLAGS@
LDFLAGS=@LIBS@ -ljpeg @X_PRE_LIBS@ @X_LIBS@ -lX11 @X_EXTRA_LIBS@ @XEXT_LIB@ @MLIB_LIBS@
CFLAGS= -DDCFLAGS='"$(DFLAGS)"' -DDLDFLAGS='"$(LDFLAGS)"' $(DFLAGS)

OBJS=video_stream.o video_mpeg1.o video_mpeg2.o video_motion.o c_getbits.o video_output_x11.o video_output.o yuv2rgb.o video_tables.o screenshot.o spu_mixer.o $(top_builddir)/common/timemath.o $(MLIB_OBJS) $(MMX_OBJS) $(OTHER_OBJS)

video_stream: $(OBJS)

clean:
	rm -f video_stream *.o


