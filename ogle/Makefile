
SUBDIRS         = ctrl mpeg2_video mpeg2_program ac3 mpeg_audio vmg ui

all:
	cd ctrl && $(MAKE)
	cd mpeg2_video && ${MAKE}
	cd mpeg2_program && ${MAKE}
	cd ac3 && ${MAKE}
	cd mpeg_audio && ${MAKE}
	cd vmg && ${MAKE}
	cd ui && ${MAKE}


clean: 
	SUBDIRS='$(SUBDIRS)'; \
	for i in $$SUBDIRS; \
	do (cd $$i && $(MAKE) $(MFLAGS) $@) || exit 1; done

